{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "full_name": {
      "type": "string"
    },
    "MDH": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "phone": {
      "type": "string"
    },
    "address": {
      "type": "text"
    },
    "note": {
      "type": "text"
    },
    "payment_method": {
      "type": "enumeration",
      "enum": [
        "COD",
        "bank",
        "momo",
        "vnpay"
      ]
    },
    "total_price": {
      "type": "decimal"
    },
    "statusOrder": {
      "type": "enumeration",
      "enum": [
        "pending",
        "confirmed",
        "shipping ",
        "completed",
        "cancelled"
      ]
    },
    "order_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "order"
    },
    "user_name": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "Type": {
      "type": "enumeration",
      "enum": [
        "Visitors",
        "User"
      ]
    }
  }
}
