{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "default": "name",
      "required": true
    },
    "image": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "price": {
      "type": "decimal"
    },
    "sale_price": {
      "type": "integer"
    },
    "description": {
      "type": "richtext"
    },
    "short_description": {
      "type": "text"
    },
    "reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review",
      "mappedBy": "product"
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "stock": {
      "type": "integer",
      "required": true
    },
    "is_sale": {
      "type": "boolean",
      "default": false
    },
    "sold_count": {
      "type": "integer",
      "default": 0,
      "min": 0
    },
    "average_rating": {
      "type": "decimal"
    },
    "review_count": {
      "type": "integer"
    },
    "colorOption": {
      "type": "component",
      "component": "product.color-option",
      "repeatable": true
    },
    "sizeOption": {
      "type": "component",
      "component": "product.size",
      "repeatable": true
    }
  }
}
